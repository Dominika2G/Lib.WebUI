@model MakeReservationViewModel

<div class="lib-mb-5 lib-mt-25 lib-white-card lib-w-163">
    <div class="row lib-pt-8 justify-content-center">
        <span class="lib-content-extrabold-xl lib-text-blue-gray-800">DODAWANIE NOWEGO AUTORA</span>
    </div>
    <form asp-controller="Book" asp-action="BorrowBook" data-method="POST" id="BorrowForm" asp-antiforgery="false">
        <div class="row lib-p-3">
            <div class="col lib-m-8">
                <div class="row lib-mb-6">
                    <input name="BookId" value="@Model.BookId" hidden/>
                    <select class="lib-select form-select lib-content-medium-l lib-text-gray-500" id="AuthorDropdown" name="UserId" aria-label="">
                        <option class="lib-content-medium-l lib-text-gray-500" selected>Uzytkownik</option>
                        @foreach (var author in Model.UsersCollection)
                        {
                            <option class="lib-content-medium-l lib-text-gray-500" value="@author.UserId">@author.FirstName @author.LastName</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row justify-content-end lib-pr-10 lib-pb-5">
            <button type="submit" class="btn lib-dark-btn lib-text-gray-50 lib-w-24 lib-h-10 lib-content-bold-m">WYPOŻYCZ</button>
        </div>
    </form>
</div>
