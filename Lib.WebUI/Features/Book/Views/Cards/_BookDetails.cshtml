@model BookDetailViewModel

<div class="lib-mb-5 lib-mt-5 lib-book-detail-card w-100 lib-mb-5">
    <div class="row lib-p-3">
        <div class="col-auto">
            <img src="~/img/BookCovers/Doktor-Sen.jpg" style="width:150px; height: 200px;" />
        </div>
        <div class="col lib-pr-5">
            <div class="row lib-mt-1">
                <span class="lib-content-semibold-xl lib-text-gray-800">@Model.AuthorFirstName @Model.AuthorLastName</span>
            </div>
            <div class="row">
                <span class="lib-content-semibold-l lib-text-gray-600 lib-mt-2">@Model.Title</span>
            </div>
            <div class="row text-left lib-mt-2 lib-mt-2">
                <span class="lib-content-regular-m">@Model.Description</span>
            </div>
            <div class="row justify-content-end lib-mt-3">
                <span class="lib-content-medium-m lib-text-gray-600">Rozwiń opis <img class="lib-mb-1" src="~/img/Other/lib-arrow-down.svg" /></span>
            </div>
        </div>
        <div class="col-1">
            <div class="row justify-content-end">
                <span class="lib-content-medium-m lib-w-25">Ocena: 7.5</span>
            </div>
        </div>
    </div>
</div>
