<div class="lib-mb-5 lib-mt-25 lib-white-card w-50">
    <div class="row lib-pt-8 justify-content-center">
        <span class="lib-content-extrabold-xl lib-text-blue-gray-800">GENEROWANIE KODÓW</span>
    </div>
    <form asp-controller="Auth" asp-action="Login" data-method="POST" id="LofinForm" asp-antiforgery="false">
        <div class="row lib-p-3">
            <div class="col lib-m-8">
                <div class="row lib-mb-1">
                    <input id="NumberOfCodesForm" name="UserName" class="lib-textbox lib-content-medium-l lib-text-gray-500" placeholder="Ilość kodów do wygenerowania" type="text" />
                </div>
                <p class="lib-content-regular-xxs lib-text-red-primary text-left">*Max 30 kodów</p>
            </div>
        </div>
        <div class="row justify-content-end lib-pr-10 lib-pb-5">
            <button type="submit" class="btn lib-dark-btn lib-text-gray-50 lib-w-24 lib-h-10 lib-content-bold-m">GENERUJ</button>
        </div>
    </form>
</div>