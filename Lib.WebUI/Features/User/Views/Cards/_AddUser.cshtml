@model CreateUserViewModel

<div class="lib-mb-5 lib-mt-25 lib-white-card lib-w-163">
    <div class="row lib-pt-8 justify-content-center">
        <span class="lib-content-extrabold-xl lib-text-blue-gray-800">DODAJ NOWEGO UŻYTKOWNIKA</span>
    </div>
    <form asp-controller="User" asp-action="AddUser" data-method="POST" id="AddUserForm" asp-antiforgery="false">
        <div class="row lib-p-7">
            <div class="col lib-m-2">
                <div class="row lib-mb-6">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "FirstName", @placeholder = "Imię" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
                <div class="row lib-mb-6">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "LastName", @placeholder = "Nazwisko" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
                <div class="row lib-mb-6">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "Password", @placeholder = "Hasło" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="row lib-mb-6">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "ConfirmPassword", @placeholder = "Potwierdź hasło" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col lib-m-2">
                <div class="row lib-mb-6">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "Email", @placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="row lib-mb-6">
                    @Html.DropDownListFor(model => model.RoleId, new List<SelectListItem>
                    {
                          new SelectListItem { Text = "Administrator", Value = "1"},
                          new SelectListItem { Text = "Użytkownik", Value = "2"}
                    },
                    "Wybierz rolę",
                    new { @class= "lib-select form-select lib-content-medium-l lib-text-gray-500" })
                    @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                </div>
                <div class="row lib-mb-6">
                    @Html.EditorFor(model => model.Class, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "Class", @placeholder = "Klasa" } })
                </div>
            </div>
        </div>
        <div class="row justify-content-end lib-pr-10 lib-pb-5">
            <button type="submit" class="btn lib-dark-btn lib-text-gray-50 lib-w-24 lib-h-10 lib-content-bold-m">DODAJ</button>
        </div>
    </form>
</div>