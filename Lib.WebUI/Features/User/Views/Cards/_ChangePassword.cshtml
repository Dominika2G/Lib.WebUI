@model ChangePasswordRequest

<div class="lib-mb-5 lib-mt-25 lib-white-card lib-w-163">
    <div class="row lib-pt-8 justify-content-center">
        <span class="lib-content-extrabold-xl lib-text-blue-gray-800">ZMIEŃ HASŁO</span>
    </div>
    <form asp-controller="User" asp-action="ChangePassword" data-method="POST" id="LofinForm" asp-antiforgery="false">
        <div class="row lib-p-3">
            <div class="col lib-m-8">
                <div class="row lib-mb-6">
                    @*<input id="Password" name="Password" class="lib-textbox lib-content-medium-l lib-text-gray-500" placeholder="Hasło" type="password" />*@
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "ConfirmPassword", @placeholder = "Podaj stare hasło", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="row lib-mb-6">
                    @*<input id="ConfirmPassword" name="ConfirmPassword" class="lib-textbox lib-content-medium-l lib-text-gray-500" placeholder="Potwierdź hasło" type="password" />*@
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control lib-textbox lib-content-medium-l lib-text-gray-500", @name = "ConfirmPassword", @placeholder = "Podaj nowe hasło", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                @if (ViewBag.InvalidOldPassword != null)
                {
                    <div class="row lib-mb-6">
                        <label class="lib-content-medium-m lib-text-red-primary">@ViewBag.InvalidOldPassword</label>
                    </div>
                }
            </div>
        </div>
        <div class="row justify-content-end lib-pr-10 lib-pb-5">
            <button type="submit" class="btn lib-dark-btn lib-text-gray-50 lib-w-40 lib-h-10 lib-content-bold-m">ZMIEŃ HASŁO</button>
        </div>
    </form>
</div>